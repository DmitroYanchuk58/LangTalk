<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LangTalkMobileApp.DesignElements.ProfileElements.DescriptionPart">
    <VerticalStackLayout>
        <Grid MinimumHeightRequest="50"
              MaximumHeightRequest="150">
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Text="About" FontFamily="Karla" FontSize="24" TextColor="#FF677D" Margin="20,0,0,0" VerticalOptions="End"></Label>
            <Label Grid.Row="1"
                   FontSize="16"
                   Margin="20,0,0,0"
                   FontFamily="Karla"
                   VerticalOptions="Start"
                   LineBreakMode="TailTruncation"
                   MaxLines="6"
                   Text="{Binding Description}" />

        </Grid>
    </VerticalStackLayout>
</ContentView>
